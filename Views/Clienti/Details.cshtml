@model Proiect_Cafenea.Models.Client

@{
    ViewData["Title"] = "Detalii Client";
}

<style>
    
    .page-header-container {
        text-align: center;
        padding: 40px 0;
        margin-bottom: 20px;
        border-bottom: 2px solid #d7ccc8;
    }

  
    .details-card {
        background-color: #efebe9;
        border: 1px solid #d7ccc8;
        border-radius: 12px;
        max-width: 550px;
        margin: 0 auto;
        padding: 40px;
        box-shadow: 0 4px 15px rgba(62, 39, 35, 0.1);
    }


    .info-group {
        margin-bottom: 25px;
        text-align: left;
        border-bottom: 1px dashed #d7ccc8;
        padding-bottom: 10px;
    }

    .info-label {
        font-family: 'Playfair Display', serif;
        font-size: 1rem;
        font-weight: 800;
        color: #4e342e;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: block;
        margin-bottom: 5px;
    }

    .info-value {
        font-size: 1.4rem;
        color: #3e2723;
        display: block;
    }


    .btn-brown {
        background-color: #3e2723;
        color: #fff !important;
        border: none;
        padding: 12px 30px;
        border-radius: 4px;
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        text-decoration: none;
        display: block;
        text-align: center;
        transition: 0.3s;
    }

        .btn-brown:hover {
            background-color: #5d4037;
        }
</style>

<div class="page-header-container">
    <h1 class="display-4 font-titlu" style="color:#3e2723;">Detalii Client</h1>
    <p class="text-muted fst-italic">Vizualizează informațiile de profil ale membrului</p>
</div>

<div class="container">
    <div class="details-card">

      
        <div class="info-group">
            <span class="info-label">Nume Complet</span>
            <span class="info-value">@Model.Nume</span>
        </div>

     
        <div class="info-group">
            <span class="info-label">Adresă Email</span>
            <span class="info-value">@Model.Email</span>
        </div>

      
        <div class="actions-footer" style="display: flex; flex-direction: column; gap: 15px; margin-top: 30px;">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-brown">
                Editează Profilul
            </a>

            <div class="text-center mt-2">
                <a asp-action="Index" class="link-back" style="color: #8d6e63; text-decoration: none; font-size: 0.9rem;">
                    ← Înapoi la listă
                </a>
            </div>
        </div>

    </div>
</div>

<div style="height: 100px;"></div>