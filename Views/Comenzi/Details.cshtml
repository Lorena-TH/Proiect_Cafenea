@model Proiect_Cafenea.Models.Comanda

@{
    ViewData["Title"] = "Detalii Comandă";
}

<link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@700&family=Merriweather:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

<style>
  
    body {
        background-color: #f4eadd;
        font-family: 'Merriweather', serif;
        color: #4e342e;
    }

    h1, .font-titlu {
        font-family: 'Cinzel Decorative', cursive;
    }

   
    .page-header-container {
        text-align: center;
        padding: 40px 0;
        margin-bottom: 30px;
        border-bottom: 2px solid #d7ccc8;
    }

 
    .receipt-card {
        background-color: #efebe9;
        border: 1px solid #d7ccc8;
        border-radius: 8px;
        max-width: 900px;
        margin: 0 auto; 
        padding: 40px;
        box-shadow: 0 4px 15px rgba(62, 39, 35, 0.1);
        position: relative;
    }

    
    .info-header {
        display: flex;
        justify-content: space-between;
        border-bottom: 2px dashed #d7ccc8;
        padding-bottom: 20px;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 20px;
    }

    .info-group {
        display: flex;
        flex-direction: column;
    }

    .info-label {
        font-family: 'Cinzel Decorative', cursive;
        color: #8d6e63;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .info-value {
        font-size: 1.2rem;
        font-weight: bold;
        color: #3e2723;
    }

  
    .details-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
    }

       
        .details-table th {
            text-align: left;
            padding: 15px 10px;
            border-bottom: 2px solid #3e2723;
            color: #3e2723;
            font-family: 'Cinzel Decorative', cursive;
            font-size: 1rem;
        }

        
        .details-table td {
            padding: 15px 10px;
            border-bottom: 1px solid #d7ccc8;
            color: #4e342e;
            vertical-align: middle;
        }

    
    .total-section {
        text-align: right;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 2px solid #3e2723;
    }

    .total-label {
        font-family: 'Cinzel Decorative', cursive;
        font-size: 1.5rem;
        color: #3e2723;
        margin-right: 20px;
    }

    .total-amount {
        font-family: 'Cinzel Decorative', cursive;
        font-size: 2rem;
        color: #3e2723;
        font-weight: bold;
    }

  
    .actions-footer {
        margin-top: 40px;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-brown {
        background-color: #3e2723;
        color: #ffca28;
        border: none;
        padding: 10px 30px;
        border-radius: 4px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
        text-transform: uppercase;
        display: inline-block;
    }

        .btn-brown:hover {
            background-color: #5d4037;
            color: #fff;
        }

    .btn-beige {
        background-color: #d7ccc8;
        color: #3e2723;
        border: 1px solid #a1887f;
        padding: 10px 30px;
        border-radius: 4px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-beige:hover {
            background-color: #a1887f;
            color: #fff;
        }

</style>

<div class="page-header-container">
    <h1 class="display-4 font-titlu" style="color:#3e2723;">Detalii comandă #@Model.Id</h1>
</div>

<div class="container">

    <div class="receipt-card">

        <div class="info-header">
            <div class="info-group">
                <span class="info-label">Client</span>
                <span class="info-value">
                    @if (Model.Client != null)
                    {
                        @Model.Client.Nume
                    }
                    else
                    {
                        <span>- Necunoscut -</span>
                    }
                </span>
            </div>

            <div class="info-group" style="text-align: right;">
                <span class="info-label">Data Comenzii</span>
                <span class="info-value">@Model.DataComanda.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
        </div>

        <h3 style="font-family: 'Cinzel Decorative'; color:#5d4037; margin-bottom: 20px;">Produse pe bon</h3>

        <table class="details-table">
            <thead>
                <tr>
                    <th>Produs</th>
                    <th style="text-align: center;">Cantitate</th>
                    <th style="text-align: right;">Preț unitar</th>
                    <th style="text-align: right;">Total linie</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Detalii)
                {
                    <tr>
                        <td>
                            <strong>@item.Produs.Nume</strong>
                        </td>
                        <td style="text-align: center;">
                            @item.Cantitate buc.
                        </td>
                        <td style="text-align: right;">
                            @item.Produs.Pret.ToString("0.00") lei
                        </td>
                        <td style="text-align: right; font-weight: bold;">
                            @((item.Cantitate * item.Produs.Pret).ToString("0.00")) lei
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="total-section">
            <span class="total-label">Total general:</span>
            <span class="total-amount">
                @Model.Detalii.Sum(x => x.Cantitate * x.Produs.Pret).ToString("0.00") lei
            </span>
        </div>

        <div class="actions-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-brown">Editează</a>
            <a asp-action="Index" class="btn-beige">Înapoi la listă</a>
