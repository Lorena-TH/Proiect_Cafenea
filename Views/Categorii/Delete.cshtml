@model Proiect_Cafenea.Models.Categorie

@{
    ViewData["Title"] = "Șterge Categorie";
}

<style>
    
    .warning-text {
        color: #c62828; 
        font-weight: 700;
        margin-bottom: 20px;
    }


    .delete-card {
        background-color: #efebe9;
        border: 1px solid #d7ccc8;
        border-radius: 12px;
        max-width: 550px;
        margin: 0 auto;
        padding: 40px;
        box-shadow: 0 4px 15px rgba(62, 39, 35, 0.1);
        text-align: center;
    }


    .detail-row {
        background-color: rgba(255, 255, 255, 0.5);
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 30px;
        border: 1px dashed #d7ccc8;
    }

    .detail-label {
        font-family: 'Playfair Display', serif;
        font-size: 1.1rem;
        font-weight: 800;
        color: #4e342e;
        display: block;
    }

    .detail-value {
        font-size: 1.3rem;
        color: #3e2723;
    }
</style>

<div class="page-header-container">
    <h1 class="display-4 font-titlu" style="color:#3e2723;">Ștergere categorie</h1>
    <p class="text-muted fst-italic">Această acțiune este ireversibilă</p>
</div>

<div class="container">
    <div class="delete-card">
        <h3 class="warning-text">Ești sigur că vrei să ștergi această categorie?</h3>

        <div class="detail-row">
            <span class="detail-label">Nume Categorie</span>
            <span class="detail-value">@Model.Nume</span>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="actions-footer">

                <button type="submit" class="btn-brown" style="background-color: #c62828 !important; width: 100%; margin-bottom: 15px;">
                    Confirmă Ștergerea
                </button>

                <a asp-action="Index" class="btn-brown" style="background-color: #d7ccc8 !important; color: #4e342e !important; width: 100%;">
                    Anulează și înapoi la listă
                </a>
            </div>
        </form>
    </div>
</div>

<div style="height: 100px;"></div>