 @model IEnumerable<Proiect_Cafenea.Models.Produs>

@{
    ViewData["Title"] = "Meniu Cafenea";}<link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@700&family=Merriweather:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet"><style>
 
     body {
          
         }

      h1, .font-titlu, .pret-produs {
        font-family: 'Playfair Display', serif;
        }

     .page-header-container {
          text-align: center;
         padding: 40px 0;
         margin-bottom: 30px;
        border-bottom: 2px solid #d7ccc8;
    }

  
    .search-bar-container {
        background-color: #efebe9;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #d7ccc8;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        gap: 15px;
        margin-bottom: 40px;
        box-shadow: 0 4px 6px rgba(62, 39, 35, 0.05);
    }

    .left-group {
        display: flex;
        gap: 10px;
        flex-grow: 1;
        align-items: center;
        flex-wrap: wrap;
    }

    .search-input {
        background-color: #ffffff;
        border: 1px solid #d7ccc8;
        padding: 8px 15px;
        border-radius: 4px;
        min-width: 250px;
        color: #4e342e;
    }

    .link-reset {
        color: #8d6e63;
        text-decoration: none;
        font-size: 0.9rem;
        margin-left: 5px;
    }


    .btn-brown {

        border: none;
        padding: 8px 20px;
        text-transform: uppercase;
        font-weight: bold;
        border-radius: 4px;
        transition: 0.3s;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

        .btn-brown:hover {
            background-color: #5d4037;
            color: #fff;
        }

   
    .btn-stock {

        border: none;
        padding: 10px 0;
        text-transform: uppercase;
        font-weight: bold;
        border-radius: 4px;
        transition: 0.3s;
        text-decoration: none;
        display: block;
        width: 100%;
        text-align: center;
        font-size: 0.85rem;
        margin-bottom: 10px;
    }

        

    .btn-beige {
        background-color: #d7ccc8;
        color: #3e2723;
        border: 1px solid #a1887f;
        padding: 8px 15px;
        border-radius: 4px;
        font-weight: bold;
        text-decoration: none;
        font-size: 0.9rem;
        transition: 0.3s;
        cursor: pointer;
    }

  
    .card-produs {
        background-color: #efebe9;
        border: 1px solid #d7ccc8;
        border-radius: 6px;
        padding: 25px 20px;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        transition: transform 0.3s;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .card-produs:hover {
            transform: translateY(-5px);
            border-color: #a1887f;
        }

    .nume-produs {
        font-family: 'Merriweather', serif;
        font-size: 1.3rem;
        color: #3e2723;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .categorie-produs {
        color: #8d6e63;
        font-style: italic;
        font-size: 0.95rem;
        margin-bottom: 15px;
    }

    .pret-produs {
        font-size: 1.8rem;
        color: #3e2723;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .btn-edit-full {
        width: 100%;
        padding: 10px 0;
        margin-bottom: 10px;
        letter-spacing: 1px;
    }



 

    .actions-links {
        margin-top: auto;
        font-size: 0.8rem;
    }

    .link-mic {
        color: #8d6e63;
        text-decoration: none;
        margin: 0 4px;
        transition: color 0.2s;
        display: inline-block;
    }

        .link-mic:hover {
            color: #3e2723;
            font-weight: bold;
        }

   
    .mt-2 span {
        color: #ccc;
        margin: 0 2px;
    }</style><div class="page-header-container">
    <h1 class="display-3 font-titlu" style="color:#3e2723;">Meniu Cafenea</h1>
    <p class="text-muted fst-italic">Administrează produsele și stocurile </p></div><div class="container">

    <div class="search-bar-container">
        <form asp-action="Index" method="get" class="left-group">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                   class="search-input" placeholder="Caută produs...">

            <button type="submit" class="btn-beige">Căutare</button>

            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["PretSortParm"]"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               class="btn-beige">
                Sortează după preț
            </a>

            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
            {
                <a asp-action="Index" class="link-reset">Reset</a>
            }
        </form>

        <div>
            <a asp-action="Create" class="btn-brown">
                + Adaugă Produs
            </a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card-produs">
                    <div>
                        <div class="nume-produs">@item.Nume</div>
                        <div class="categorie-produs">@item.Categorie?.Nume</div>
                        <div class="pret-produs">
                            @item.Pret.ToString("0.##") <span style="font-size:0.6em">RON</span>
                        </div>
                    </div>

                    <div>
                        <a asp-controller="Status" asp-action="Verifica" asp-route-orderId="@item.Id" class="btn-stock">
                            Verifică stoc (gRPC)
                        </a>

                        <div class="mt-2">
                            
                            <a asp-action="Edit" asp-route-id="@item.Id" class="link-mic">Editează</a>
                            <span style="color:#ccc">|</span>

                            <a asp-action="Details" asp-route-id="@item.Id" class="link-mic">Detalii</a>
                            <span style="color:#ccc">|</span>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="link-mic" style="color:#c62828">Șterge</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-5 p-5" style="border: 2px dashed #d7ccc8; background: #fff8e1; border-radius: 10px;">
            <h3 class="font-titlu" style="color: #5d4037;">Nu s-au găsit produse.</h3>
        </div>
    }</div><div style="height: 100px;"></div>