@model Proiect_Cafenea.Models.DetaliiComanda

@{
    ViewData["Title"] = "Ștergere Poziție Comandă";
}

<style>
   
    .warning-text {
        color: #c62828;
        font-weight: 700;
        margin-bottom: 25px;
        font-family: 'Playfair Display', serif;
    }

    .delete-card {
        background-color: #efebe9;
        border: 1px solid #d7ccc8;
        border-radius: 12px;
        max-width: 550px;
        margin: 0 auto;
        padding: 40px;
        box-shadow: 0 4px 15px rgba(62, 39, 35, 0.1);
        text-align: center;
    }

  
    .detail-box {
        background-color: rgba(255, 255, 255, 0.5);
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        border: 1px dashed #d7ccc8;
        text-align: left;
    }

    .detail-item {
        margin-bottom: 10px;
    }

    .detail-label {
        font-family: 'Playfair Display', serif;
        font-weight: 800;
        color: #4e342e;
        font-size: 1rem;
        display: block;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .detail-value {
        font-size: 1.2rem;
        color: #3e2723;
        display: block;
    }
</style>

<div class="page-header-container" style="text-align: center; padding: 40px 0; border-bottom: 2px solid #d7ccc8; margin-bottom: 30px;">
    <h1 class="display-4 font-titlu" style="color:#3e2723; font-family: 'Playfair Display', serif; font-weight: 800;">Eliminare Produs</h1>
    <p class="text-muted fst-italic">Confirmați ștergerea acestui produs din cadrul comenzii</p>
</div>

<div class="container">
    <div class="delete-card">
        <h3 class="warning-text">Ești sigur că vrei să ștergi acest detaliu?</h3>

        <div class="detail-box">
            <div class="detail-item">
                <span class="detail-label">ID Comandă</span>
                <span class="detail-value">#@Model.Comanda.Id</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Produs</span>
                <span class="detail-value">@Model.Produs.Nume</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Cantitate</span>
                <span class="detail-value">@Model.Cantitate buc.</span>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="actions-footer" style="display: flex; flex-direction: column; gap: 10px;">
           
                <button type="submit" class="btn-brown" style="background-color: #c62828 !important; width: 100%; color: white !important; border: none; padding: 12px; border-radius: 4px; font-weight: bold; text-transform: uppercase;">
                    CONFIRMĂ ȘTERGEREA
                </button>

                <div class="text-center mt-2">
                    <a asp-action="Index" style="color: #8d6e63; text-decoration: none; font-size: 0.9rem; font-family: 'Montserrat', sans-serif;">
                        ← Înapoi la listă
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div style="height: 100px;"></div>