@model Proiect_Cafenea.Models.Produs

@{
    ViewData["Title"] = "Adaugă Produs";
}

<style>
  
    body {
        color: #4e342e;
    }

    h1, h4, .font-titlu {
        font-family: 'Montserrat', sans-serif;
    }

    .page-header-container {
        text-align: center;
        padding: 40px 0;
        margin-bottom: 20px;
        border-bottom: 2px solid #d7ccc8;
    }

    
    .form-card {
        background-color: #efebe9;
        border: 1px solid #d7ccc8;
        border-radius: 8px;
        max-width: 500px; 
        margin: 0 auto; 
        padding: 40px;
        box-shadow: 0 4px 15px rgba(62, 39, 35, 0.1);
    }

   
    .form-group {
        margin-bottom: 25px;
        text-align: left;
    }

    .control-label {
        font-family: 'Playfair Display', serif;
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 10px;
        display: block;
    }

    .input-premium {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #d7ccc8;
        border-radius: 4px;
        background-color: #fff;
        color: #3e2723;
        font-size: 1rem;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .input-premium:focus {
            border-color: #a1887f;
            outline: none;
            box-shadow: 0 0 8px rgba(161, 136, 127, 0.3);
        }

   
    .text-danger {
        color: #c62828 !important;
        font-size: 0.85rem;
        font-style: italic;
        margin-top: 5px;
        display: block;
    }

   
    .actions-footer {
        margin-top: 30px;
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .btn-brown {
        background-color: #3e2723;
        color: #ffca28;
        border: none;
        padding: 12px 30px;
        border-radius: 4px;
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.3s;
        width: 100%; 
    }

        .btn-brown:hover {
            background-color: #5d4037;
            color: #fff;
        }

    .link-back {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #8d6e63;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .link-back:hover {
            color: #3e2723;
            text-decoration: underline;
        }

</style>

<div class="page-header-container">
    <h1 class="display-4 font-titlu" style="color:#3e2723;">Creare Produs</h1>
    <p class="text-muted fst-italic">Introdu un nou produs în meniu</p>
</div>

<div class="container">

    <div class="form-card">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-4">
                <label asp-for="Nume" class="control-label-premium">Numele produsului</label>
                <input asp-for="Nume" class="input-premium" placeholder="Ex: Latte Machiato" />
                <span asp-validation-for="Nume" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Pret" class="control-label-premium">Preț (RON)</label>
                <input asp-for="Pret" class="input-premium" placeholder="15.00" />
                <span asp-validation-for="Pret" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="CategorieId" class="control-label-premium">Categorie</label>
               
                <select asp-for="CategorieId" class="input-premium" asp-items="ViewBag.CategorieId"></select>
            </div>

            <div class="form-actions-container">
                <button type="submit" class="btn-brown w-100">Salvează produsul</button>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="link-back">← Înapoi la listă</a>
            </div>
        </form>
    </div>
</div>