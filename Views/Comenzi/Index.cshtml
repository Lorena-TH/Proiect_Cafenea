@model IEnumerable<Proiect_Cafenea.Models.Comanda>

@{
    ViewData["Title"] = "Registru Comenzi";
}

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800&family=Merriweather:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

<style>
    
    body {
        background-color: #f4eadd;
        font-family: 'Merriweather', serif;
        color: #4e342e;
    }

    h1, .font-titlu {
        font-family: 'Playfair Display', serif;
        font-weight: 800;
    }

    .page-header-container {
        text-align: center;
        padding: 40px 0;
        margin-bottom: 30px;
        border-bottom: 2px solid #d7ccc8;
    }

  
    .actions-bar {
        background-color: #efebe9;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #d7ccc8;
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
        box-shadow: 0 4px 6px rgba(62, 39, 35, 0.05);
    }


    .btn-brown {
        background-color: #3e2723;
        color: #fff !important; 
        border: none;
        padding: 10px 25px;
        border-radius: 4px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
        text-transform: uppercase;
        display: inline-block;
        font-size: 0.9rem;
    }

        .btn-brown:hover {
            background-color: #5d4037;
        }

    .table-container {
        background-color: #ffffff; 
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(62, 39, 35, 0.1);
        border: 1px solid #d7ccc8;
    }

    .premium-table {
        width: 100%;
        border-collapse: collapse;
    }

        .premium-table thead {
            background-color: #efebe9; 
        }

        .premium-table th {
            padding: 15px 20px;
            text-align: left;
           
            font-family: 'Playfair Display', serif !important;
            font-weight: 800 !important;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.95rem;
            color: #3e2723 !important;
            border-bottom: 3px solid #a1887f;
        }

            .premium-table th a {
                color: #3e2723 !important; 
                text-decoration: none;
                font-family: 'Playfair Display', serif !important;
                font-weight: 800 !important;
            }

        .premium-table td {
            padding: 15px 20px;
            border-bottom: 1px solid #d7ccc8;
            color: #3e2723;
            vertical-align: middle;
        }

        .premium-table tbody tr:hover {
            background-color: #efebe9;
        }

   
    .link-mic {
        color: #8d6e63;
        text-decoration: none;
        margin: 0 4px;
        font-size: 0.85rem;
        font-weight: bold;
        display: inline-block;
    }

        .link-mic:hover {
            color: #3e2723;
            text-decoration: underline;
        }
</style>

<div class="page-header-container">
    <h1 class="display-3 font-titlu" style="color:#3e2723;">Registru Comenzi</h1>
    <p class="text-muted fst-italic">Istoricul comenzilor din cafenea</p>
</div>

<div class="container">
    <div class="actions-bar">
        <a asp-action="Create" class="btn-brown">+ Adaugă comandă nouă</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <table class="premium-table">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">
                                Data comenzii 
                            </a>
                        </th>
                        <th>Client</th>
                        <th style="text-align: right;">Acțiuni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-weight: bold;">@item.DataComanda.ToString("dd.MM.yyyy")</td>
                            <td style="font-style: italic; color: #5d4037;">
                                @(item.Client != null ? item.Client.Nume : "- Fără Client -")
                            </td>
                            <td style="text-align: right;">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="link-mic">Editează</a>
                                <span style="color:#ccc">|</span>
                                <a asp-action="Details" asp-route-id="@item.Id" class="link-mic">Detalii</a>
                                <span style="color:#ccc">|</span>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="link-mic" style="color:#c62828">Șterge</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center mt-5 p-5" style="border: 2px dashed #d7ccc8; background: #efebe9; border-radius: 10px;">
            <h3 class="font-titlu" style="color: #3e2723;">Nu există comenzi înregistrate.</h3>
        </div>
    }
</div>

<div style="height: 100px;"></div>