@model Proiect_Cafenea.Models.Categorie

@{
    ViewData["Title"] = "Detalii Categorie";
}

<style>
  
    .page-header-container {
        text-align: center;
        padding: 40px 0;
        margin-bottom: 40px;
        border-bottom: 2px solid var(--color-beige-m);
    }


    .section-title {
        margin-bottom: 20px;
        font-size: 1.5rem;
        border-left: 5px solid var(--color-copper);
        padding-left: 15px;
    }

   
    .table-container {
        background-color: var(--color-beige-l); 
        border-radius: 12px;
        overflow: hidden;
        box-shadow: inset 0 2px 4px rgba(0,0,0,0.02), 0 4px 15px rgba(78, 59, 49, 0.08);
        border: 1px solid var(--color-beige-m);
        margin-bottom: 40px;
    }

    .premium-table {
        width: 100%;
        border-collapse: collapse;
    }

        .premium-table thead {
           
            background-color: transparent;
        }

        .premium-table th {
            padding: 15px 20px;
            text-align: left;
            font-family: 'Playfair Display', serif;
            color: var(--color-espresso);
            font-weight: 700;
            border-bottom: 2px solid var(--color-copper);
        }

        .premium-table td {
            padding: 15px 20px;
            border-bottom: 1px solid rgba(78, 59, 49, 0.1);
            color: var(--color-espresso);
            vertical-align: middle;
        }

    .price-col {
        text-align: right;
        font-weight: bold;
        color: var(--color-copper);
    }

   
    .actions-footer {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }
</style>

<div class="page-header-container">
    <small style="color: var(--color-copper); font-style: italic;">Categorie</small>
    <h1 class="display-3 font-titlu">@Model.Nume</h1>
</div>

<div class="container">
    <h3 class="section-title">Produse incluse în meniu</h3>

    @if (Model.Produse != null && Model.Produse.Any())
    {
        <div class="table-container">
            <table class="premium-table">
                <thead>
                    <tr>
                   
                        <th style="text-transform: uppercase; font: bold; font-weight: 900; letter-spacing: 1px;">Nume produs</th>
                        <th style="text-align: right; text-transform: uppercase; font-weight: 800; letter-spacing: 1px;">Preț</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var produs in Model.Produse)
                    {
                        <tr>
                            <td>
                                <strong>@produs.Nume</strong>
                            </td>
                            <td class="price-col" style="text-align: right; font-weight: bold; color: var(--color-copper);">
                                @produs.Pret.ToString("0.00") RON
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center p-5 mb-4" style="border: 2px dashed var(--color-beige-m); background: var(--color-beige-l); border-radius: 10px;">
            <h4 class="font-titlu">Această categorie nu are produse încă.</h4>
        </div>
    }

    <div class="actions-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-brown">Redenumește Categoria</a>

        <a asp-action="Index" class="btn-brown" style="background-color: var(--color-beige-m) !important; color: var(--color-espresso) !important;">Înapoi la Listă</a>
    </div>
</div>
<div style="height: 100px;"></div>